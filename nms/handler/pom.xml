<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.SirBlobman.api.nms</groupId>
        <artifactId>nms-parent</artifactId>
        <version>2.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>nms-handler</artifactId>
    <name>SirBlobmanAPI NMS Handler</name>

    <repositories>
        <!-- SpigotMC Repository -->
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Spigot API -->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- NMS BossBar -->
        <dependency>
            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-bossbar</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- NMS Scoreboard -->
        <dependency>
            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-scoreboard</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- NMS Fallback -->
        <dependency>
            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-fallback</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- NMS 1_7_R4 -->
        <dependency>
            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-1_7_R4</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- NMS 1_8_R3 -->
