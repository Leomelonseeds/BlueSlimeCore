            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-1_9_R2</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- NMS 1_10_R1 -->
        <dependency>
            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-1_10_R1</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>

        <!-- NMS 1_11_R1 -->
        <dependency>
            <groupId>com.SirBlobman.api.nms</groupId>
            <artifactId>nms-1_11_R1</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
