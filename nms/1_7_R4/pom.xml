<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>
    
    <parent>
        <groupId>com.SirBlobman.api</groupId>
        <artifactId>SirBlobmanAPI-parent</artifactId>
        <version>1.11-SNAPSHOT</version>
        <relativePath>../../</relativePath>
    </parent>
    
    <artifactId>NMS-1_7_R4</artifactId>
    <name>SirBlobmanAPI NMS Version 1_7_R4</name>
    <description>The NMS handler for v1_7_R4 (CraftBukkit 1.7.10)</description>
    
    <properties>
        <spigot.version>1.7.10-R0.1-SNAPSHOT</spigot.version>
    </properties>

    <repositories>
        <!-- InventiveTalent Repository -->
        <repository>
            <id>inventive-repo</id>
            <url>https://repo.inventivetalent.org/content/groups/public/</url>
        </repository>
    </repositories>
    
    <dependencies>
        <!-- Bukkit API -->
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- CraftBukkit NMS -->
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>craftbukkit</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- SirBlobmanAPI NMS Handler -->
        <dependency>
            <groupId>com.SirBlobman.api</groupId>
            <artifactId>NMS-handler</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- BossBar API -->
        <dependency>
            <groupId>org.inventivetalent</groupId>
            <artifactId>bossbarapi</artifactId>
            <version>2.4.1</version>
            <scope>provided</scope>

            <exclusions>
                <exclusion>
                    <groupId>org.bukkit</groupId>
                    <artifactId>bukkit</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.mcstats.bukkit</groupId>
                    <artifactId>metrics-lite</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
</project>