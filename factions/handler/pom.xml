<project>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.github.sirblobman.api.factions</groupId>
        <artifactId>factions-parent</artifactId>
        <version>2.2-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>factions-handler</artifactId>
    <name>SirBlobmanAPI Factions NMS Handler</name>

    <repositories>
        <!-- SpigotMC Repository -->
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Spigot API -->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>${spigot.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- LegacyFactions -->
        <dependency>
            <groupId>com.github.sirblobman.api.factions</groupId>
            <artifactId>factions-legacy</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- MassiveCore Factions -->
        <dependency>
            <groupId>com.github.sirblobman.api.factions</groupId>
            <artifactId>factions-massive</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- Factions UUID -->
        <dependency>
            <groupId>com.github.sirblobman.api.factions</groupId>
            <artifactId>factions-uuid</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- Factions UUID Legacy and Forks -->
        <dependency>
            <groupId>com.github.sirblobman.api.factions</groupId>
            <artifactId>factions-uuid-legacy</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- FactionsX -->
        <dependency>
            <groupId>com.github.sirblobman.api.factions</groupId>
            <artifactId>factionsx</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>